{% extends "layout.twig" %}

{% block content %}
<h2 class="text-2xl font-bold mb-6">Dashboard</h2>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <div class="bg-white shadow rounded-xl p-6">
    <h3 class="text-gray-500 text-sm mb-2">Total Tickets</h3>
    <p class="text-3xl font-semibold">{{ total }}</p>
  </div>
  <div class="bg-white shadow rounded-xl p-6">
    <h3 class="text-gray-500 text-sm mb-2">Open Tickets</h3>
    <p class="text-3xl font-semibold text-green-600">{{ open }}</p>
  </div>
  <div class="bg-white shadow rounded-xl p-6">
    <h3 class="text-gray-500 text-sm mb-2">Closed Tickets</h3>
    <p class="text-3xl font-semibold text-gray-600">{{ closed }}</p>
  </div>
</div>

<a href="/tickets" class="mt-8 inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">Manage Tickets</a>
{% endblock %}